{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/money-xslt.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-r", "win-x64",
                "-p:PublishSingleFile=true"         
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/money-xslt.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "validate-money-pohoda-fv",
            "command": "xmllint",
            "type": "process",
            "args": [
                "--schema",
                "${workspaceFolder}/money-pohoda-fv/assets/pohoda-schema/data.xsd",
                "${workspaceFolder}/tmp/output.xml",
                "--noout"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}